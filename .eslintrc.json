{
  "plugins": [
    "vue"
  ],
  "extends": [
    // "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "rules": {
    "indent": ["error", 2],
    "no-extra-parens": "warn",
    "no-multi-spaces":"error",
    "no-multiple-empty-lines": "error",
    "no-mixed-spaces-and-tabs": "warn",
    "no-trailing-spaces": "error",
    "no-var": "error",
    "quotes": ["error", "single"],
    "semi": "error"
  }
}